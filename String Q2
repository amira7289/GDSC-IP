class Solution {
public:
    string toLowerCase(string s) {
     string str = "";
        int size = s.length();
        for(int i = 0; i < size; i++){

            if(isalpha(s[i])){
                char c = s[i];
                str += c | (32);
            }else{
                str += s[i];
            }

        }

        return str;
    }
    
};
